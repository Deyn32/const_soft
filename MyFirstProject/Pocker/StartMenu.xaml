<Window x:Name="StartMenu" x:Class="Pocker.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pocker"
        mc:Ignorable="d"
        Title="Стартовое меню" Height="300" Width="300" Icon=".\component\Icon.png">
    <Window.Background>
        <ImageBrush ImageSource=".\component\Menu.jpg" Stretch="UniformToFill" TileMode="None" />
    </Window.Background>
    <Grid>
        <Label Content="Тип игры" HorizontalAlignment="Left" Margin="0,47,0,0" VerticalAlignment="Top"/>
        <Label Content="Кол-во игроков" HorizontalAlignment="Left" Margin="0,79,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="95,49,0,0" VerticalAlignment="Top" Width="175"/>
        <Button Content="Выбрать" HorizontalAlignment="Left" Margin="95,82,0,0" VerticalAlignment="Top" Width="175" Click="Button_Click"/>

    </Grid>
</Window>
